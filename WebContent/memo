--회원 DB

drop table member purge;
create table member(
	mnum number primary key,
	id varchar2(60) not null,
	pw varchar2(12) not null
);

drop sequence member_seq ;
create sequence member_seq  
increment by 1
start with 1
minvalue 1
maxvalue 10000
nocache;

insert into member 
values(member_seq.nextval, 'kwon', '1111');

insert into member 
values(member_seq.nextval, 'kim', '2222');

insert into member 
values(member_seq.nextval, 'park', '3333');

insert into member 
values(member_seq.nextval, 'lee', '4444');

insert into member 
values(member_seq.nextval, 'choi', '5555');

--게시판 DB

drop table board purge;
create table board(
	bnum number primary key,
	writer varchar2(60) not null,
	subject varchar2(100) not null,
	content varchar2(3000) not null,
	readcount int default 0
);

drop sequence board_seq ;
create sequence board_seq
increment by 1
start with 1
minvalue 1
maxvalue 10000
nocache;


